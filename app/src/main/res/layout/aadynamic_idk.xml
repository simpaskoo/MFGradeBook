<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:translationZ="20dp">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/aaudalosti_filter_button_bg"
        android:minHeight="?attr/actionBarSize"
        android:paddingStart="0dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_event_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_black"
                    android:text="Název události"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:contentDescription="@string/event_date_description"/>
                <TextView
                    android:id="@+id/text_view_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_black"
                    android:text="Skupina: 7A"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:contentDescription="@string/event_date_description"/>

                <TextView
                    android:id="@+id/text_view_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_black"
                    android:text="Konání: 26. 9. 16:00"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:contentDescription="@string/event_date_description"/>

            </LinearLayout>

            <TextView
                android:id="@+id/text_view_event_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="80dp"
                android:background="@drawable/aacena_udalost_bg"
                android:fontFamily="@font/roboto_black"
                android:gravity="center"
                android:text="250,-"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
</androidx.constraintlayout.widget.ConstraintLayout>