<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/side_menu_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationZ="20dp">

    <Toolbar
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/aaside_menu_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/side_menu_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/exit_btn"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_arrow_back_24"
                app:backgroundTint="@color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="-10dp"
                android:layout_marginEnd="20dp">
                <ImageView
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:src="@drawable/baseline_account_box_24"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="David Šimpach"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:fontFamily="@font/roboto_black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Žák)"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:fontFamily="@font/roboto_black"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Správa"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_black"/>
            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/zzudalosti_filter_button_bg">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_supervised_user_circle_24"
                        android:background="@drawable/side_menu_icon_bg"
                        android:padding="2dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Správa skupin"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:fontFamily="@font/roboto_black"
                        android:layout_gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="15dp"/>
                </LinearLayout>
            </Toolbar>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="Aplikace"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_black"/>
            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/zzudalosti_filter_button_bg">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_info_24"
                        android:background="@drawable/side_menu_icon_bg"
                        android:padding="2dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informace o aplikaci"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:fontFamily="@font/roboto_black"
                        android:layout_gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="15dp"/>
                </LinearLayout>
            </Toolbar>
            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/zzudalosti_filter_button_bg">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_account_circle_24"
                        android:background="@drawable/side_menu_icon_bg"
                        android:padding="2dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Správa profilů"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:fontFamily="@font/roboto_black"
                        android:layout_gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="15dp"/>
                </LinearLayout>
            </Toolbar>
            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/zzudalosti_filter_button_bg">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_power_settings_new_24"
                        android:background="@drawable/side_menu_icon_red_bg"
                        android:padding="2dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Odhlásit se"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:fontFamily="@font/roboto_black"
                        android:layout_gravity="center"
                        android:paddingStart="10dp"
                        android:paddingEnd="15dp"/>
                </LinearLayout>
            </Toolbar>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:paddingStart="120dp"
                android:paddingBottom="20dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@mipmap/google_play"
                    android:background="@color/transparent"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@mipmap/instagram_icon"
                    android:background="@color/transparent"/>
            </LinearLayout>
        </LinearLayout>

    </Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>