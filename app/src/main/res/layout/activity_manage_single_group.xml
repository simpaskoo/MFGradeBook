<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".activities.menu.ManageSingleGroupActivity"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
                android:id="@+id/text_view_manage_group_group_name"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_view_manage_group_admin_name" />

        <TextView
                android:id="@+id/text_view_manage_group_admin_name"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_manage_group_group_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:id="@+id/text_view_manage_group_treasurer_name"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_manage_group_admin_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:id="@+id/text_view_manage_group_member_count"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_manage_group_treasurer_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:id="@+id/text_view_manage_group_group_access_code"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@+id/text_view_manage_group_member_count"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <Button
                android:id="@+id/button_manage_group_as_admin"
                android:layout_width="wrap_content"
                android:layout_height="71dp"
                android:layout_marginTop="16dp"
                android:text="@string/admin_options"
                android:enabled="false"
                app:layout_constraintTop_toBottomOf="@+id/text_view_manage_group_group_access_code"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" />

        <Button
                android:id="@+id/add_users_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/button_manage_group_as_admin"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                android:text="@string/add_users" />

    </androidx.constraintlayout.widget.ConstraintLayout>
