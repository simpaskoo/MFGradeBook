<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_group_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationZ="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:translationZ="7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Název skupiny"
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/white"
                android:textSize="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="center">
                <ImageButton
                    android:id="@+id/close_edit_group_members_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/aabaseline_clear_24"
                    android:layout_gravity="end"
                    app:backgroundTint="@color/transparent"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingBottom="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/zznew_event_select_group_scroll">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upravit příjemce"
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/cena_pozadi"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <ScrollView
                android:id="@+id/scrl_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/zznew_event_select_group_scroll" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp">
                    <include
                        layout="@layout/aadynamic_group_member_field"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"/>
                    <include
                        layout="@layout/aadynamic_group_member_field"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"/>
                    <include
                        layout="@layout/aadynamic_group_member_field"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"/>
                    <include
                        layout="@layout/aadynamic_group_member_field"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"/>
                    <include
                        layout="@layout/aadynamic_group_member_field"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"/>
                    <include
                        layout="@layout/aadynamic_group_member_field"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"/>
                    <include
                        layout="@layout/aadynamic_group_member_field"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"/>
                    <include
                        layout="@layout/aadynamic_group_member_field"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"/>
                    <include
                        layout="@layout/aadynamic_group_member_field"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"/>
                    <include
                        layout="@layout/aadynamic_group_member_field"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"/>
                    <include
                        layout="@layout/aadynamic_group_member_field"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"/>
                    <include
                        layout="@layout/aadynamic_group_member_field"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"/>
                    <include
                        layout="@layout/aadynamic_group_member_field"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"/>
                    <include
                        layout="@layout/aadynamic_group_member_field"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/zznew_event_confirm_group_selection"
        android:translationZ="8dp"
        android:text="Odstranit"
        android:fontFamily="@font/roboto_black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/edit_member_black_background_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/semi_transparent_black"
        android:translationZ="6dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>