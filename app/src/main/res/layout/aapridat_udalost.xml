<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c1025">

    <Spinner
        android:id="@+id/event_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:entries="@array/event_type_add"
        android:spinnerMode="dropdown"
        android:contextClickable="true"
        android:gravity="start"
        android:background="@drawable/aanew_event_spinner_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/clear_btn">

    </Spinner>

    <ImageButton
        android:id="@+id/clear_btn"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/aabaseline_clear_24"
        app:backgroundTint="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/nazev_udalosti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Název"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_black"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/event_type"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/nazev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="název"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingEnd="20dp"
        android:background="@drawable/aanew_event_nazev_udalosti_bg"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/nazev_udalosti"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/popis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Popis"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_black"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/nazev"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/popis2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="popis"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:background="@drawable/aanew_event_popis_udalosti_bg"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/popis"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/ucastnici"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Účastníci"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_black"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/popis2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pridani_ucastnici"/>

    <Button
        android:id="@+id/pridat_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/aanew_event_pridat_ucastnika_btn_shape"
        android:text="Přidat"
        android:src="@drawable/aabaseline_add_24"
        app:layout_constraintTop_toBottomOf="@id/popis2"
        app:layout_constraintEnd_toEndOf="parent">
    </Button>

    <LinearLayout
        android:id="@+id/pridani_ucastnici"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pridat_btn">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:columnCount="4"
            android:rowCount="1">
            <include
                layout="@layout/aadynamic_new_event_pridat_skupinu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp" />
            <include
                layout="@layout/aadynamic_new_event_pridat_skupinu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp" />
            <include
                layout="@layout/aadynamic_new_event_pridat_skupinu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp" />
            <include
                layout="@layout/aadynamic_new_event_pridat_skupinu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp" />
        </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:columnCount="4"
            android:rowCount="3">
            <include
                layout="@layout/aadynamic_new_event_pridat_ucastnika"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"/>
            <include
                layout="@layout/aadynamic_new_event_pridat_ucastnika"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"/>
            <include
                layout="@layout/aadynamic_new_event_pridat_ucastnika"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"/>
            <include
                layout="@layout/aadynamic_new_event_pridat_ucastnika"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"/>
            <include
                layout="@layout/aadynamic_new_event_pridat_ucastnika"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"/>
            <include
                layout="@layout/aadynamic_new_event_pridat_ucastnika"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"/>
            <include
                layout="@layout/aadynamic_new_event_pridat_ucastnika"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"/>
            <TextView
                android:id="@+id/dalsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Další..."
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_black"
                android:textSize="15dp" />

        </GridLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/ukonceni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Ukončení"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_black"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/pridani_ucastnici"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/aanew_event_nazev_udalosti_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ukonceni">

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:ems="10"
            android:text="Datum"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_black"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:ems="10"
            android:text="Čas"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_black"
            android:inputType="text" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/fab_description"
        app:backgroundTint="@color/Plus_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/aabaseline_add_24"/>

    <include
        layout="@layout/aadynamic_add_user_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>