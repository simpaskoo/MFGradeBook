<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d28300"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    tools:context=".activities.menu.ManageGroupsActivity">

    <ScrollView
        android:id="@+id/login_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/logo_image2"
                android:layout_marginBottom="40dp"/>
            <include
                layout="@layout/aadynamic_login_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/login_scroll_view"
                app:layout_constraintTop_toTopOf="login_scroll_view"
                app:layout_constraintEnd_toEndOf="login_scroll_view"
                app:layout_constraintBottom_toBottomOf="login_scroll_view"/>
            <include
                layout="@layout/aadynamic_login_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/login_scroll_view"
                app:layout_constraintTop_toTopOf="login_scroll_view"
                app:layout_constraintEnd_toEndOf="login_scroll_view"
                app:layout_constraintBottom_toBottomOf="login_scroll_view"/>
        </LinearLayout>
    </ScrollView>

    <Toolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/aalogin_use_new_account_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/aalogin_user_icone_bg"
                android:src="@drawable/baseline_supervised_user_circle_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Použít jiný účet"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/white"
                android:textSize="25dp"/>
        </LinearLayout>
    </Toolbar>
</androidx.constraintlayout.widget.ConstraintLayout>